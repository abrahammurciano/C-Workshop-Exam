{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build StringTest",
            "command": "gcc",
            "args": [
                "-g",
                "-Wall",
                "-Werror",
                "StringTest.c",
                "-o",
                "a.out",
                "-L.",
                "-lString"
            ],
            "options": {
                "cwd": "src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Archive Library"
            ]
        },
        {
            "type": "shell",
            "label": "Archive Library",
            "command": "ar",
            "args": [
                "rcs",
                "libString.a",
                "String.o"
            ],
            "options": {
                "cwd": "src"
            },
            "dependsOn": [
                "Build String"
            ]
        },
        {
            "type": "cppbuild",
            "label": "Build String",
            "command": "gcc",
            "args": [
                "-g",
                "-c",
                "String.c",
                "-Wall",
                "-Werror",
                "-o",
                "String.o"
            ],
            "options": {
                "cwd": "src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Doxygen: Generate documentation",
            "command": "doxygen",
            "args": [
                "Doxyfile"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}